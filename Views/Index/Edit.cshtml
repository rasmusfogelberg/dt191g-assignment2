@model MVCBookstore.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-2">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Language" class="col-md-2 control-label">Language</label>
                <select class="form-select" asp-for="Language" asp-items="Html.GetEnumSelectList<Book._Language>()">
                    <option selected="selected" value="Book._Language">Please select</option>
                </select>
                <span asp-validation-for="Language" class="text-danger" />
            </div>
            <div class="form-group row mt-2">
                <div class="col-sm-12 mb-2">Please select the book type(s)</div>
                @if (Model != null && Model.AvailableTypes != null)
                {
                    @foreach (var item in Model.AvailableTypes)
                    {
                        <div class="col-sm-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="@item.Value" name="SelectedTypes" 
                                @if (Model.SelectedTypes.Contains(item.Value)) 
                                {
                                    @:checked
                                } />
                                <label class="form-check-label" asp-for="SelectedTypes">
                                    @item.Text
                                </label>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}